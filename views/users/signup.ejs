<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Sign up on WanderLust</h1>
    <div class="col-6 offset-3" >
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <lable for="username" class="form-label">Username</lable>
                <input type="text" name="username" id="username" class="form-control" required placeholder="Enter username">
                <div class="valid-feedback">Looks good!</div>
                
            </div>
            <div class="mb-3">
                <lable for="email" class="form-label">E-mail</lable>
                <input type="email" name="email" id="email" class="form-control" required placeholder="Enter email">
                
            </div>
            <div class="mb-3">
                <lable for="password" class="form-label">Password</lable>
                <input type="password" name="password" id="pass" class="form-control" required placeholder="Enter password">
                <div class="valid-feedback">Looks strongs!</div>
            </div>
            <button class="btn btn-info">SignUp</button>
        </form>
        
    </div>
</div>